@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<a href="/orders/create" class="btn btn-dark mb-2">Vytvořit</a>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Jméno</th>
            <th>Adresa</th>
            <th>Částka</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var order in Model.Orders)
    {
        <tr class="@(order.Id %3 ==0 ? "table-success" : "")" >
            <td>#@order.Id</td>
            <td>@order.Name</td>
            <td>@order.AddressOneLine</td>
            <td>123 Czk</td>
            <td>
                <a asp-for asp-area="" asp-page="/Orders/Detail" asp-route-id="@order.Id" class="btn btn-sm btn-dark">Otevřít</a>
                @* <a asp-for asp-area="" asp-page="/Orders/Client" asp-route-id="@order.Id" class="btn btn-sm btn-dark">Otevřít</a> *@
            </td>
        </tr>
    }
</table>
